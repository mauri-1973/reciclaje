<h1>Lista de Materiales</h1>

   <table class="table">
     <thead>
       <tr>
         <th>Nombre del Material</th>
         <th>Descripci√≥n</th>
         <th>Reciclador Asociado</th>
       </tr>
     </thead>
     <tbody>
       <% @materials.each do |material| %>
         <tr>
           <td><%= material.name %></td>
           <td><%= material.description %></td>
           <td>
             <% if material.recycler %>
               <%= link_to material.recycler.name, recycler_path(material.recycler) %>
             <% else %>
               <span>Sin reciclador</span>
             <% end %>
           </td>
         </tr>
       <% end %>
     </tbody>
   </table>