
  <h1>Ay√∫danos a Reciclar</h1>
  <div class="row">
    <div class="col-6 col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <div class="card text-white bg-primary mb-3">
        <div class="card-header">Cantidad de Recicladores</div>
        <div class="card-body">
          <h5 class="card-title"><%= @recyclers_count %></h5>
        </div>
      </div>
    </div>
    <div class="col-6 col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <div class="card text-white bg-success mb-3">
        <div class="card-header">Total de Entregas</div>
        <div class="card-body">
          <h5 class="card-title"><%= @deliveries_total %> materiales</h5>
        </div>
      </div>
    </div>
  </div>

  <h2>Entregas por Tipo de Material</h2>

  <table id="recyclers-table" class="table table-striped table-bordered nowrap" style="width:100%">
    
    <thead>
      <tr>
        <th>Material</th>
        <th>Cantidad Total</th>
      </tr>
    </thead>
    <tbody>
      <% @deliveries_by_material.each do |material_name, total_quantity| %>
        <tr>
          <td><%= material_name %></td>
          <td><%= total_quantity %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
 <% content_for :scripts do %>
    <script>
      $(document).ready(function() {
        $('#recyclers-table').DataTable({
          responsive: true,
          language: {
            url: "https://cdn.datatables.net/plug-ins/1.13.5/i18n/es-ES.json"
          }
        });
      });
    </script>
<% end %>