<h1>Editar Reciclador</h1>
<%= link_to 'Volver', recyclers_path, class: 'btn btn-secondary mt-4 mb-4' %>
<%= form_with(model: @recycler, local: true) do |form| %>
  <% if @recycler.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recycler.errors.count, "error") %> impidieron guardar el reciclador:</h2>

      <ul>
        <% @recycler.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label 'Nombre' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label 'Teléfono' %>
    <%= form.telephone_field :phone, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label 'Dirección' %>
    <%= form.text_field :address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Guardar cambios', class: 'btn btn-primary mt-4 mb-4' %>
  </div>
<% end %>

